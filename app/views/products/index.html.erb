<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Description</th>
      <th>Stock Quantity</th>
      <th>Category</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><a href="/products/<%= product.id %>">
        <%= product.title %>
        </a></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.stock_quantity %></td>
        <td><%= product.category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>


